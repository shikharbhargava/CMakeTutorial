      "command": "ctest --output-on-failure",
      "options": {
        "cwd": "${workspaceFolder}/../build"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Run All Unit Tests"
    }
